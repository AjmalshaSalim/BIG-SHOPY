<%- include ('../layouts/adminHeader.ejs') %>


        <h4 class="text-center text-success my-5"> ADD COUPON</h4>
        <h6 class="text-center text-danger my-1">
            <%=message%>
        </h6>
<br>
        <form action="/admin/addCoupon" method="post">
            <!-- Email input -->
            <div class=" mb-4 m">
                <label for="" style="margin-left: 25%; margin-right: 30%;">Enter Coupon Name</label>
                <input style="margin-left: 25%; margin-right: 30%; background-color: rgb(233, 252, 245);" type="text" id="addCategories" name="coupName"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3"
                    required />
                    <label for="" style="margin-left: 25%; margin-right: 30%;">Enter Discount (%)</label>
                <input style="margin-left: 25%; margin-right: 30%; background-color: rgb(233, 252, 245);" type="number" id="addCategories" name="coupDis"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3"
                    required />
                    <label for="" style="margin-left: 25%; margin-right: 30%;">Enter The Minimum Price </label>
                <input style="margin-left: 25%; margin-right: 30%; background-color: rgb(233, 252, 245);" type="number" id="addCategories" name="coupMin"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3"
                    required />
                    <label for="" style="margin-left: 25%; margin-right: 30%;">Enter Maximum Price</label>
                <input style="margin-left: 25%; margin-right: 30%; background-color: rgb(233, 252, 245);" type="number" id="addCategories" name="coupMax"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3"
                    required />
                    <label for="" style="margin-left: 25%; margin-right: 30%;">Enter Expiring Date</label>
                <input style="margin-left: 25%; margin-right: 30%; background-color: rgb(233, 252, 245);" type="date" id="addCategories" name="coupDate"
                    class="form-control form-control-lg border-white w-50 h-10 mb-3" required />
                <span id="Email"></span>
            </div>

            <div style="display: flex; justify-content: space-between;">
                <a style="margin-left: 40%;"><button type="submit" class="btn-success rounded-2 p-2">Save</button></a>
        </form>
        <a style="margin-right: 40%;" href="/admin/loadCoupon"><button type="button"
                class="btn-secondary rounded-2 p-2">cancel</button></a>

    </div>
    <%- include ('../layouts/adminFooter.ejs') %>